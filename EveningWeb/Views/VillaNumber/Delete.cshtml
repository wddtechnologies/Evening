@model Evening.Domain.Entities.VillaNumber

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa Number</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" asp-action="DeletePost" asp-route-VillaNumberId="@Model.Villa_Number" class="row">
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="VillaId" class="form-control border shadow" readonly />
                    <label asp-for="VillaId" class="ms-2">Villa ID</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Villa_Number" class="form-control border shadow" readonly />
                    <label asp-for="Villa_Number" class="ms-2">Villa Number</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SpecialDetails" class="form-control border shadow" readonly />
                    <label asp-for="SpecialDetails" class="ms-2">Special Details</label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
